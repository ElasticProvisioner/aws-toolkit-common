// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to AWS Documents Language Server",
            "type": "node",
            "request": "attach",
            "port": 6012,
            "outFiles": ["./lsp/out/**/*.js"],
            "restart": {
                "maxAttempts": 10,
                "delay": 1000
            }
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Unit Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/unit/**/*.js"],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Unit Tests (Current File)",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/unit/**/${fileBasenameNoExtension}.js"],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Integration Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/integration/**/*.js"],
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Integration Tests (Current File)",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/integration/**/${fileBasenameNoExtension}.js"],
        },
    ]
}
