{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "module": "UMD",
        "target": "ES6",
        "moduleResolution": "node",
        "lib": ["ES2021"],
        "outDir": "./out",
        "rootDir": "./src",
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "out"]
}
